    <schema>
      <field name="firstname" type="zope.schema.TextLine" indexer:searchable="true">
        <description />
        <required>False</required>
        <title i18n:translate="label_person_firstname">First name</title>
      </field>
      <field name="lastname" type="zope.schema.TextLine" indexer:searchable="true">
        <description />
        <required>False</required>
        <title i18n:translate="label_person_lastname">Last name</title>
      </field>
      <field name="nationality" type="zope.schema.TextLine" indexer:searchable="true">
        <description />
        <required>False</required>
        <title i18n:translate="label_person_nationality">Nationality</title>
      </field>
      <field name="year" type="zope.schema.TextLine" indexer:searchable="true">
        <description />
        <required>False</required>
        <title i18n:translate="label_person_year">Year</title>
      </field>
    </schema>
